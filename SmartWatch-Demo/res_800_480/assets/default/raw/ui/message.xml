<window anim_hint="slide_down" style="message" full_screen="false" self_layout="default(x=205,y=45,w=390,h=390)" theme="message_styles">
    <gesture x="0" y="0" h="100%" w="100%" name="message_window">
        <list_view x="c" y="-55" w="100%" h="120%" item_height="100">
            <scroll_view name="view" x="c" y="m" w="100%" h="100%">
                <list_item style="a" children_layout="default(rows=1,cols=1)">
                    <view x="c" y="m" w="100%" h="95%" style="dragger" visible="false"></view>
                </list_item>
                <list_item style="a" children_layout="default(rows=1,cols=1)">
                    <view x="0" y="m" w="100%" h="95%" style="dragger" >
                        <image x="55" y="m" w="88" h="88" image="app_cloudy_normal_88" draw_type="scale_auto"/>
                        <row x="160" y="m" w="200" h="100%">
                            <digit_clock x="0" y="0" w="100%" h="50%" format="hh:mm" style="time"/>
                            <label x="0" y="50%" w="100%" h="50%" text="天气晴朗" style="text"/>
                        </row>
                        <draggable left="-400" horizontal_only="true"/>
                    </view>
                </list_item>
                <list_item style="a" children_layout="default(rows=1,cols=1)">
                    <view x="0" y="m" w="100%" h="95%" style="dragger" >
                        <image x="55" y="m" w="88" h="88" image="app_message_normal_88" draw_type="scale_auto"/>
                        <row x="160" y="m" w="200" h="100%">
                            <digit_clock x="0" y="0" w="100%" h="50%" format="hh:mm" style="time"/>
                            <label x="0" y="50%" w="100%" h="50%" text="你好啊在干嘛？" style="text"/>
                        </row>
                        <draggable left="-400" horizontal_only="true"/>
                    </view>
                </list_item>
                <list_item style="a" children_layout="default(rows=1,cols=1)">
                    <view x="0" y="m" w="100%" h="95%" style="dragger" >
                        <image x="55" y="m" w="88" h="88" image="app_training_normal_88" draw_type="scale_auto"/>
                        <row x="160" y="m" w="200" h="100%">
                            <digit_clock x="0" y="0" w="100%" h="50%" format="hh:mm" style="time"/>
                            <label x="0" y="50%" w="100%" h="50%" text="多久没运动了" style="text"/>
                        </row>
                        <draggable left="-400" horizontal_only="true"/>
                    </view>
                </list_item>
                <list_item style="a" children_layout="default(rows=1,cols=1)" visible="false">
                    <view x="c" y="m" w="100%" h="95%" style="dragger"></view>
                </list_item>
            </scroll_view>
            <scroll_bar_m name="bar" x="right" y="0" w="6" h="100%" value="0"/>
        </list_view>
    </gesture>
</window>
